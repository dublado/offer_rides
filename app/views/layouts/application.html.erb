<!DOCTYPE html>
<html>
<head>
  <title>Offerrides</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= csrf_meta_tags %>

  <link href="/stylesheets/screen.css" media="all" rel="stylesheet" type="text/css" />  
  <link href="/bootstrap/dist/css/bootstrap.css" media="all" rel="stylesheet" type="text/css" />
  <link href="/bootstrap/dist/css/bootstrap-theme.css" media="all" rel="stylesheet" type="text/css" />
  
  <script data-main="/js/app" src="/js/require.js"></script>
  <% javascript_include_tag "application" %>

</head>
<body data-gpk="<%= Rails.application.config.googlemapskey %>">

<header class="page-header clearfix">
  <div class="container">
  <% if current_user then %>
  <div class="pull-right">
    <% if current_user.avatar_url then %>
    <img src="<%= current_user.avatar_url %>"  />
    <% end %>
    <%= current_user.label %> - (<%= current_user.email %>)
    <%= link_to "Sair", destroy_user_session_path, :method => "delete" %>
  </div>
  <form action="<%= search_routes_path %>" class="pull-left form-inline" method="get" role="form">
    <div class="form-group">
    <input type="text" class="form-control input-lg" name="k" value="" placeholder="Rua/Avenida, cidade..." />
    </div>
    <button type="submit" class="btn btn-primary">buscar</button>
  </form>
  <% end %>
  </div>
</header>
<% if flash[:notice] %>
<p id="notice" class="label label-success"><%= notice %></p>
<% end %>

<section class="container">
  <h1>Sistema de caronas</h1>
  <div class="row-fluid">
<%= yield %>
  </div>
</section>

</body>
</html>
